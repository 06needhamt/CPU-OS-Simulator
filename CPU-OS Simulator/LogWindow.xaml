<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="CPU_OS_Simulator.LogWindow"
        Title="LogWindow" Height="455" Width="838" Closing="Window_Closing_1">
    <Grid>
        <TextBlock x:Name="txtLog" x:FieldModifier="public" HorizontalAlignment="Left" Margin="10,10,0,0" Background="#FF8BF4FF" TextWrapping="Wrap" VerticalAlignment="Top" Height="360" Width="810" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
        <Label Content="Log Detail Level" HorizontalAlignment="Left" Margin="500,370,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Level" x:FieldModifier="public" HorizontalAlignment="Left" Margin="500,393,0,0" VerticalAlignment="Top" Width="94" SelectedIndex="0">
            <System:String>Low</System:String>
            <System:String>Medium</System:String>
            <System:String>High</System:String>
            <System:String>Verbose</System:String>
        </ComboBox>

    </Grid>
</Window>
